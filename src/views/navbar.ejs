<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span class="brand-text">Insight</span>
        </a>
      
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
              aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon" id="navbarIcon"></span>
            </button>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">

              <a class="nav-link" href="/" id="homeLink">Home</a>
            </li>
            <a class="nav-link" href="/page/allblogs" id="blogLink">Blog</a>
            <a class="nav-link" href="/page/about" id="aboutLink">About</a>
            <a class="nav-link" href="/page/contact" id="contactLink">Contact</a>


            <script>
              const token = localStorage.getItem('token');
              if (!token) {
                document.write('<li class="nav-item"><a class="nav-link" id="loginLink" href="/auth/page/login">Login</a></li>');
                document.write('<li class="nav-item"><a class="nav-link" id="registerLink" href="/auth/page/register">Register</a></li>');
              } else {
                document.write('<li class="nav-item"><a class="nav-link" id="dashboardLink" href="/page/dashboard">Dashboard</a></li>');

              }
              const doLogout = () => {
                localStorage.removeItem('token');
                window.location.href = '/auth/page/login';
              }
            </script>
            <script>
              const links = {
                '/': 'homeLink',
                '/page/blog': 'blogLink',
                '/page/about': 'aboutLink',
                '/page/contact': 'contactLink',
                '/auth/page/login': 'loginLink',
                '/auth/page/register': 'registerLink',
                '/page/dashboard': 'dashboardLink',
              };
              const currentPath = window.location.pathname;
              if (links[currentPath]) {
                document.getElementById(links[currentPath]).classList.add('active');
              }
            </script>
          </ul>

          <div id="navProfile" style="display: none;">

            <div class="d-flex align-items-center ms-lg-4">
              <div class="search-box me-3">
                <input type="text" class="search-input" placeholder="Search...">
                <button class="search-button">
                  <i class="bi bi-search"></i>
                </button>
              </div>
              <div class="dropdown"></div>
              <button class="btn btn-secondary dropdown-toggle" type="button" id="profileDropdown"
                data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                <li><a class="dropdown-item" href="/page/profile">Profile</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><button class="dropdown-item" onclick="doLogout()">Logout</button></li>
              </ul>
            </div>
          </div>
          <script>

            if (token) {
              document.querySelector('.dropdown').style.display = 'block';
              document.querySelector('#navProfile').style.display = 'block';
            } else {
              document.querySelector('.dropdown').style.display = 'none';
            }
          </script>
        </div>
      </div>
      </div>
    </nav>
  </header>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const navbarToggler = document.querySelector(".navbar-toggler");
      const navbarIcon = document.getElementById("navbarIcon");

      navbarToggler.addEventListener("click", function () {
        navbarIcon.classList.toggle("open");
      });
    });
  </script>
</body>

</html>